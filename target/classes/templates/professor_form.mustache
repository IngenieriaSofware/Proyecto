<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Agregar Profesor</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
<div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Agregar Profesor</h1>

    {{#successMessage}}
        <div class="bg-green-100 text-green-800 p-3 rounded mb-4">{{successMessage}}</div>
    {{/successMessage}}

    {{#errorMessage}}
        <div class="bg-red-100 text-red-800 p-3 rounded mb-4">{{errorMessage}}</div>
    {{/errorMessage}}

    <form action="/professor/new" method="post" class="space-y-4">
        <div>
            <label class="block text-gray-700 font-medium mb-1">Nombre:</label>
            <input type="text" name="name" class="w-full border border-gray-300 rounded p-2 focus:outline-none focus:ring focus:border-blue-400" required>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Dni: </label>
            <input required type="number" name="DNI" class="w-full border border-gray-300 rounded p-2 focus:outline-none focus:ring focus:border-blue-400">
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Email:</label>
            <input required type="email" name="email" class="w-full border border-gray-300 rounded p-2 focus:outline-none focus:ring focus:border-blue-400">
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Departamento:</label>
            <input type="text" name="department" class="w-full border border-gray-300 rounded p-2 focus:outline-none focus:ring focus:border-blue-400">
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-1">Tel√©fono:</label>
            <input type="text" name="phone" class="w-full border border-gray-300 rounded p-2 focus:outline-none focus:ring focus:border-blue-400">
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">Guardar</button>
    </form>

    <div class="text-center mt-4">
        <a href="/dashboard" class="text-blue-600 hover:underline">Volver al Panel</a>
    </div>
</div>
</body>
</html>
